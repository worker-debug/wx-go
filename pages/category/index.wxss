.cate_all {
  display: flex;
  height: 3000rpx;
}
.cate_left {
  height: 2000rpx;
  width: 200rpx;
  /* background-color: aqua; */
}
.cate_item {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  height: 80rpx;
}
.cate_right{
  height: 3000rpx;
  flex: 1;
  /* background-color: bisque; */
}
.cate_title {
  text-align: center;
  font-size: 40rpx;
  margin: 20rpx 0 20rpx 0;
}
.cate_eve {
  margin: 20rpx 10rpx 0 10rpx;
}
.cate_img {
  width: 100%;
  /* height: 200px; */
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
}
.cate_img navigator{
  width: 33.33%;
  padding: 30rpx 30rpx 0 30rpx;
  
}
.cate_img navigator image{
  width: 100%;
}
.goods_name {
  text-align: center;
}
.active {
  color: var(--themeColor);
  border-left: 2rpx solid black;
}