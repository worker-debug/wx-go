.detail_swiper swiper{
  width: 100%;
  height: 440rpx;
  text-align: center;

}
.detail_swiper swiper image{
  width: 80%;
}
.det_row {
  display: flex;
}
.detail_price {
  color: red;
  font-size: 32rpx;
  margin: 10rpx 0 20rpx 30rpx;
}
.det_title{
  padding-left: 30rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.det_shoucang{
  width: 200rpx;
  border-left: 1px solid black;
  padding-left: 20rpx;
}
.detail {
  color: red;
  font-size: 35rpx;
  margin: 40rpx 0 30rpx 30rpx;
}
.btn_tool {
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  height: 90rpx;
  width: 100%;
  background-color: #fff;
  border-top: 2px solid rgb(136, 126, 126);
}
.tool_item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* margin: 0 20rpx 0 10rpx; */
  flex: 2;
  position: relative;
}
.tool_item button {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  /* background-color: red; */
}
.tool_btn {
  background-color: rgb(248, 158, 126);
  flex: 5;
  color: #fff;
  font-size: 32rpx;
  font-weight: 700;
  display: flex;
  justify-content: center;
  align-items: center;
}
.tool_buy {
  flex: 5;
  background-color: rgb(230, 62, 96);
  color: #fff;
  font-size: 32rpx;
  font-weight: 700;
  display: flex;
  justify-content: center;
  align-items: center;
}